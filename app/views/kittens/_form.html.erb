<%= form_with(model: kitten) do |form| %>
  <% if kitten.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kitten.errors.count, "error") %> prohibited this kitten from being saved:</h2>
      <ul>
        <% kitten.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :age %><br>
    <%= form.number_field :age, min: 0 %>
  </div>

  <div>
    <%= form.label :cuteness %><br>
    <%= form.number_field :cuteness, in: 1..10 %>
  </div>

  <div>
    <%= form.label :softness %><br>
    <%= form.number_field :softness, in: 1..10 %>
  </div>

  <div>
